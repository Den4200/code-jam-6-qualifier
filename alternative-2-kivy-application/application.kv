#:kivy 1.11.1

Root:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Load'
                on_release: root.show_load()
        
        ImageInterface:
            DynamicImage:
                id: dynimg
                source: 'python_discord_logo.png'
                drag_rectangle: self.x, self.y, self.right, self.top
                allow_stretch: True
                keep_ratio: True

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
